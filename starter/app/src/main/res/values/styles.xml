<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TitleLabelStyle">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="LabelStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWite</item>
    </style>

    <style name="CallToActionButtonStyle">
        <item name="android:layout_height">45dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/colorWite</item>
    </style>

    <style name="SecondaryButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/SecondaryButton</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/colorWite</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/HighlightedEditText</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:foregroundTint">@color/colorWite</item>
        <item name="android:textColor">@color/colorWite</item>
        <item name="android:textColorHighlight">@color/HighlightedEditText</item>
        <item name="android:textColorHint">@color/HintOfEditText</item>
    </style>

    <style name="FloatingButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/layout_margin</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin</item>
        <item name="android:backgroundTint">@color/call_to_action_button</item>
    </style>

</resources>
